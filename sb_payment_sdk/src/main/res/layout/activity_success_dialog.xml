<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@android:style/Theme.Holo.Dialog"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    app:cornerRadius="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="48dp"
    android:background="@color/white"
    tools:context=".dialogs.SuccessDialog">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:backgroundTint="@color/white"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:fontFamily="@font/hk_grotesk_regular"
            android:text="Powered by"
            android:textColor="@color/greyButtonText"
            android:textFontWeight="600"
            android:textSize="12sp"
            app:cornerRadius="0dp"
            app:icon="@drawable/lock"
            app:iconPadding="4dp"
            app:iconSize="12dp"
            app:iconTint="@color/green" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:backgroundTint="@color/greyButton"
            android:paddingStart="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:fontFamily="@font/hk_grotesk_regular"
            android:text="startbutton"
            android:textColor="@color/greyButtonText"
            android:textFontWeight="600"
            android:textSize="12sp"
            app:cornerRadius="8dp"
            app:icon="@drawable/icon"
            app:iconPadding="4dp"
            app:iconSize="12dp"
            app:iconTint="@color/darkOrange" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="11dp"
        android:background="?android:attr/listDivider"
        android:layout_marginBottom="80dp" />

    <View
        android:id="@+id/image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/transaction_success" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/hk_grotesk_regular"
        android:text="Transaction successful!"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textFontWeight="700"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/hk_grotesk_regular"
        android:gravity="center_horizontal"
        android:text="@string/transaction_msg"
        android:textColor="@color/black"
        android:textFontWeight="400"
        android:textSize="14sp" />

    <Button
        android:id="@+id/confirmTranBtn"
        android:layout_width="229dp"
        android:layout_height="48dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/darkOrange"
        android:fontFamily="@font/hk_grotesk_regular"
        android:text="Exit page"
        android:textStyle="bold"
        android:textFontWeight="600"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        app:cornerRadius="8dp" />

</LinearLayout>